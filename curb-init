#!/usr/bin/env bash
#
# curb-init - Initialize a project for curb
#
# DEPRECATED: This script is deprecated. Use 'curb init' instead.
#             This wrapper is kept for backwards compatibility.
#
set -euo pipefail

CURB_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"

# Colors
YELLOW='\033[1;33m'
NC='\033[0m'

# Show deprecation notice
echo -e "${YELLOW}[curb-init] DEPRECATED: curb-init is deprecated. Use 'curb init' instead.${NC}" >&2
echo -e "${YELLOW}[curb-init] This command will be removed in a future release.${NC}" >&2
echo "" >&2

# Forward all arguments to 'curb init'
exec "${CURB_DIR}/curb" init "$@"
